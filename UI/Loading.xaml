<Window x:Class="MicroserviceExplorer.UI.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicroserviceExplorer.UI"
        mc:Ignorable="d" WindowStyle="ToolWindow"  
        Title="Loading" Height="180" Width="350" ResizeMode="NoResize" Topmost="True">
    <StackPanel Margin="20">
        <TextBlock Text="Downloading template files, please wait ..." Margin="20"></TextBlock>
        <ProgressBar Height="25" IsIndeterminate="True"></ProgressBar>
    </StackPanel>
</Window>
